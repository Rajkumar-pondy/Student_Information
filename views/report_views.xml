<odoo>

	  <record id="report_tree_view" model="ir.ui.view">
            <field name="name">student_report_tree</field>
			<field name="model">student.report</field>
			<field name= "arch" type = "xml">
			 <tree string="Student Report Card" decoration-success="result=='pass'" decoration-danger="result=='Fail'" >
			    <field name="report_student_id"/>
			    <field name="faculty_report_id"/>
			    <field name="student_name"/>
				<field name="report_code"/>
				<field name="report_card_terms"/>	
				<field name="result"/>
				<field name="grade"/>
			</tree>
			</field>
		</record>
        <record id="report_form_view" model="ir.ui.view">
            <field name="name">student_report_form</field>
			<field name="model">student.report</field>
			<field name= "arch" type = "xml">
			 <form string="Student Report Card">
			 <sheet>
			 <group>
			    <field name="report_student_id"/>
			    <field name="faculty_report_id"/>
			    <field name="student_name"/>
				<field name="report_code"/>
				<field name="report_card_terms"/>	
				<field name="result"/>
				<field name="grade"/>
			 </group>
			   </sheet>
			</form>
			</field>
		</record>
      
      
      <record model="ir.actions.act_window" id="report_card_action_window">
      <field name="name">Student Report Card</field>
      <field name="res_model">student.report</field>
      <field name="view_mode">tree,form</field>
     </record>
	  
        
        <menuitem id="menu_report_card" name="Student Report card" parent="menu_college_main"/>
		<menuitem id="sub_menu_report_card" name="Report card" parent="menu_report_card" action="report_card_action_window"/>

</odoo>