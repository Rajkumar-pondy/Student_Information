		<record id="student_form_view" model="ir.ui.view">
			<field name="name">student_form_view</field>
			<field name="model">student.details</field>
			<field name="arch" type="xml">
				<form>
				<header>
				    <button string="Set to started" type="object" name="progress_started" attrs="{'invisible': [('states','!=','progress')]}"/>
	    			<button string="In progress" type="object" name="progress_progressbar" attrs="{'invisible': [('states','=','progress')]}"/>
	    			<button string="Done" type="object" name="done_progressbar" attrs="{'invisible': [('states','=','finished')]}"/>
	    			<field name="states" widget="statusbar"/> 
				 </header>
					<sheet>
					 <div id="student_container">
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="student_name" class="oe_edit_only"/>
                            <h1>
                                <field name="student_name" placeholder="Student's Name"/>
                            </h1>
                      </div>
                      </div>
					     <group name="student_details_main_group" string="Student Information">
						 	<group name="student_details_group1">
						 	
						 	    <field name="student_code"/>
						 	    <field name="gender"/>
						 		<field name="dob"/>
						 		<field name="age"/>
						 	</group>
						 	<group name="student_details_group2">
						 	    <field name="department"/>
						 	    <field name="registration_date"/>
						 		<field name="email"/>
						 		<field name="contact"/>
						 	</group>
						 </group>
						 
						 <notebook>
							
							<page string="Report Card">
						 	 	<field name="report_student_ids"/>
							</page>
							
							<page string="Fee Receipt">
							
								<field name="student_receipt_ids"/>
								 
							</page>
						     
						     <page string="Course">
								<field name="student_course_ids"/>
							</page>
						
						</notebook> 
					
					</sheet>
					
					<div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers"/>
					<field name="message_ids" widget="mail_thread"/>
					</div>
				</form>
			</field>
		</record>
	 
	 <record model="ir.actions.act_window" id="student_information_action_window">
      <field name="name">Student Details</field>
      <field name="res_model">student.details</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem id="menu_college_main" name="College Management"/>
	
	<menuitem id="menu_student_main" name="Student" parent="menu_college_main" action="student_information_action_window" sequence="1"/>	
		
</odoo>