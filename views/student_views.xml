<odoo>
	
		<record id="student_tree_view" model="ir.ui.view">
			<field name="name">student_tree_view</field>
			<field name="model">student.details</field>
			<field name= "arch" type = "xml">
             <tree string="Student Information" decoration-primary="department=='CSE'" decoration-info="department=='ECE'" 
             default_order="registration_date asc" limit='50'>
					<field name="student_code"/>
					<field name="student_name"/>
			     	<field name="email"/>
			 		<field name="contact"/>
			 		<field name="dob"/>
			 		<field name="age"/>
			 		<field name="registration_date"/>
					<field name="gender"/>
					<field name="department"/>
					<field name="report_student_ids"/>
					<field name="student_receipt_ids"/>
					<field name="student_course_ids"/>
					<field name="image"/>
				</tree>
			</field>
		</record>
	
