<odoo>
      <record id="faculty_tree_view" model="ir.ui.view">
			<field name="name">faculty_tree_view</field>
			<field name="model">student.faculty</field>
			<field name= "arch" type = "xml">
				<tree string="Faculty Information">
					<field name="faculty_name"/>
					<field name="faculty_code"/>
					<field name="email"/>
			 		<field name="contact"/>
			 		<field name="dob"/>
			 		<field name="image"/>
					<field name="gender"/>
					<field name="age"/>
					<field name="department"/>
					<field name="salary"/>
				</tree>
			</field>
		</record>
	 
	 
	<record model="ir.actions.act_window" id="faculty_information_action_window">
	    <field name="name">Faculty Details</field>
	    <field name="res_model">student.faculty</field>
	    <field name="view_mode">tree,form</field>
	</record>
	
	
	<record id="faculty_form_view" model="ir.ui.view">
		<field name="name">faculty_form_view</field>
		<field name="model">student.faculty</field>
		<field name="arch" type="xml">
		<form>
			 <sheet>
			  <div id="faculty_container">
			   	 
			   	     <field name="image" widget="image" class="oe_avatar"/>
	                   
	                   <div class="oe_title">
	                          <label for="faculty_name" class="oe_edit_only"/>
	                          <h1>
	                              <field name="faculty_name" placeholder="Faculty's Name"/>
	                          </h1>
	                   </div>
	                   
			   	      <div class="oe_button_box" name="button_box">
	                      <button name="compute_student_counts" class="oe_stat_button" type="object" attrs="{'invisible': [('student_count','=',0)]}" 
	                         icon="fa-user">
	                       <field name="student_count" widget="statinfo" String="Student Details"/>
			         	  </button> 
			         	  
			         	  <button name="compute_course_count" class="oe_stat_button" type="object" attrs="{'invisible': [('course_count','=',0)]}" 
			         	  icon="fa-list">
	                       <field name="course_count" widget="statinfo" String="Course Details"/>
			         	  </button> 
	                </div>
	               </div>
					
					 <group string="Faculty Information">
					 	<group>
					 	    <field name="faculty_code"/>
					 		<field name="email"/>
					 		<field name="contact"/>
					 		<field name="dob"/>
					 	</group>
					 	<group>
					 		<field name="gender"/>
					 		<field name="age"/>
					 		<field name="department"/>
					 		<field name="salary"/>
					 	</group>
					 	<group>
					       <field name="faculty_student_ids" widget="many2many_tags"/>
					       <field name="faculty_course_ids" widget="many2many_tags"/>
					    </group>
					 </group>
					
					<notebook>
						<page string="Edit Report Card">
						  <field name="report_faculty_ids"/>
						</page>
					</notebook>
				
				</sheet>
			</form>
		</field>
	</record>
	
	  <menuitem name="Faculty" id="menu_faculty" parent="menu_college_main" action="faculty_information_action_window" sequence="2"/>
	 
</odoo>